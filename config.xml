<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.phonegap.spokanelibrary.spl-mobile"
        versionCode = "10" 
        version     = "1.0.0" >

    <gap:platform name="ios" />
    <!--
    <gap:platform name="android" />
    <gap:platform name="winphone" />
    -->

    <gap:plugin name="org.apache.cordova.inappbrowser" />

    <preference name="phonegap-version" value="3.3.0" />


       
    <gap:plugin name="com.phonegap.plugin.statusbar" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    

    <name>SPL Mobile</name>

    <description>
        Spokane Public Library 
    </description>

    <author href="https://github.com/seangirard" email="sgirard@spokanelibrary.org">
        Sean Girard 
    </author>


    <platform name="ios">
              <!-- iOS 7.0+ -->
              <!-- iPhone / iPod Touch  -->
              <icon src="res/ios/spl-60x60.png" width="60" height="60" />
              <icon src="res/ios/spl-120x120.png" width="120" height="120" />
              <!-- iPad -->
              <icon src="res/ios/spl-76x76.png" width="76" height="76" />
              <icon src="res/ios/spl-152x152.png" width="152" height="152" />
              <!-- iOS 6.1 -->
              <!-- Spotlight Icon -->
              <icon src="res/ios/spl-40x40.png" width="40" height="40" />
              <icon src="res/ios/spl-80x80.png" width="80" height="80" />
              <!-- iPhone / iPod Touch -->
              <icon src="res/ios/spl-57x57.png" width="57" height="57" />
              <icon src="res/ios/spl-114x114.png" width="114" height="114" />
              <!-- iPad -->
              <icon src="res/ios/spl-72x72.png" width="72" height="72" />
              <icon src="res/ios/spl-144x144.png" width="144" height="144" />
              <!-- iPhone Spotlight and Settings Icon -->
              <icon src="res/ios/spl-29x29.png" width="29" height="29" />
              <icon src="res/ios/spl-58x58.png" width="58" height="58" />
              <!-- iPad Spotlight and Settings Icon -->
              <icon src="res/ios/spl-50x50.png" width="50" height="50" />
              <icon src="res/ios/spl-100x100.png" width="100" height="100" />
     </platform>


    <access origin="*" />

</widget>